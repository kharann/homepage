---
import Link from './Link.svelte'
import { Icon } from 'astro-icon'

const iconLinks = [
	{
		icon: 'tabler:brand-github',
		link: 'https://github.com/kharann',
		text: 'Github'
	},
	{
		icon: 'tabler:brand-linkedin',
		link: 'https://linkedin.com/in/akvo',
		text: 'Linkedin'
	},
	{
		icon: 'tabler:mail',
		link: 'mailto:hey@akvo.no',
		text: 'Mail'
	}
]
---

<footer class="mt-16 w-full">
	<div class="m-auto flex h-full w-full max-w-4xl flex-col items-center">
		<div class="grid w-max grid-cols-3 gap-5">
			{
				iconLinks.map((iconLink) => (
					<Link url={iconLink.link}>
						<Icon name={iconLink.icon} width="24" height="24" />
						<span class="sr-only">{iconLink.text}</span>
					</Link>
				))
			}
		</div>
		<div class="mb-6 mt-10">
			<div class="flex flex-col items-center mb-4">
				<div class="flex font-medium">
					Built with <Icon
						name="simple-icons:svelte"
						width="20"
						height="20"
						class="mx-2 text-white"
					/> & <Icon name="simple-icons:astro" width="20" height="20" class="ml-2 text-white" />
				</div>
				<div class="border border-brown-11 w-3/5 mt-3"></div>
			</div>
			<span class="text-xs">by Anhkha Â© 2020 - present</span>
		</div>
	</div>
</footer>
