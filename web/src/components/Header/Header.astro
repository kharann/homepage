---
import ThemeIcon from '../ThemeIcon.astro';
import Logo from './Logo.astro';
import NavLink from './NavLink.astro';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="flex justify-between h-16 w-full mx-auto max-w-4xl items-center">
  <a href="/" class="mr-6 flex items-center no-underline">
    <!-- logo -->
    <Logo />
  </a>

  <div class="flex space-x-4">
    <nav class="flex space-x-1">
      <NavLink isActive={currentPath === ''} href="/">Home</NavLink>
      <NavLink isActive={currentPath.startsWith("blog")} href="/blog">Blog</NavLink>
      <NavLink
        isActive={currentPath === 'resume'}
        href="https://cdn.sanity.io/files/r4l4xmqo/production/88fe6b28879c1d78e9a8f4a8044ed55e7c87c666.pdf"
      >
        Resume
      </NavLink>
    </nav>
    <ThemeIcon />
  </div>
</header>
